{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "nayud",
  "version": "1.0.0",
  "identifier": "com.dimasyudha.nayud",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun start",
    "beforeBuildCommand": "NEXT_OUTPUT='export' bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "NaYud",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "license": "MIT",
    "licenseFile": "../LICENSE",
    "publisher": "NaYud",
    "createUpdaterArtifacts": true,
    "category": "Utility",
    "useLocalToolsDir": true,
    "shortDescription": "",
    "longDescription": "",
    "copyright": "",
    "android": {
      "minSdkVersion": 24
    },
    "iOS": {
      "minimumSystemVersion": "13.0"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      },
      "deb": {
        "files": {}
      },
      "rpm": {
        "epoch": 0,
        "files": {},
        "release": "1"
      }
    },
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        },
        "windowPosition": {
          "x": 400,
          "y": 400
        }
      },
      "files": {},
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13",
      "entitlements": "./Entitlements.plist"
    },
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "offlineInstaller"
      },
      "wix": null
    }
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "$TAURI_UPDATER_PUBKEY",
      "endpoints": [""]
    }
  }
}