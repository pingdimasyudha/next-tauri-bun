{
  "name": "nayud",
  "version": "1.0.0",
  "description": "",
  "author": {
    "name": "Dimas Yudha Pratama",
    "email": "pingdimasyudha@icloud.com",
    "url": "https://nayud.dimasyudha.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pingdimasyudha/nayud.git"
  },
  "private": true,
  "scripts": {
    "build": "next build",
    "build:android": "bun tauri android build",
    "build:desktop": "bun tauri build",
    "build:ios": "bun tauri ios build",
    "build:ios-release": "bun tauri ios build --export-method app-store-connect",
    "build:mac-release": "bun tauri build --bundles app --target universal-apple-darwin && xcrun productbuild --sign \"$TAURI_SIGNING_APPLE\" --component \"$(find out -maxdepth 1 -type d -name '*.app' | head -n 1)\" /Applications \"out/nayud_$(date +%d%m%Y%H%M%S).pkg\"",
    "build:web": "NEXT_OUTPUT='standalone' bun run build && cp -rf public build/standalone && cp -rf build/static build/standalone/.next",
    "build:win-amd64": "bun tauri build --runner cargo-xwin --target x86_64-pc-windows-msvc",
    "build:win-arm64": "bun tauri build --runner cargo-xwin --target aarch64-pc-windows-msvc",
    "clean": "rm -rf .next build out src-tauri/{gen,target}",
    "eslint": "next lint",
    "init:android": "bun tauri android init",
    "init:ios": "bun tauri ios init",
    "out": "mkdir -p out && find . -path ./out -prune -o \\( -type f \\( -iname \"*.apk\" -o -iname \"*-release.aab\" -o -iname \"*.deb\" -o -iname \"*.rpm\" -o -iname \"*-setup.exe\" -o -iname \"*.msi\" -o -iname \"*.ipa\" -o -iname \"*.dmg\" \\) -o -type d -iname \"*.app\" \\) -exec sh -c 'for path; do base=$(basename \"$path\"); ext=\"${base##*.}\"; name=\"${base%.*}\"; timestamp=$(date +%d%m%Y%H%M%S); if [ \"$ext\" = \"$base\" ]; then new_name=\"${name}_${timestamp}\"; else new_name=\"${name}_${timestamp}.${ext}\"; fi; mv \"$path\" \"./out/$new_name\"; done' sh {} +",
    "publish:ios": "xcrun altool --upload-app --type ios --file \"out/*.ipa\" --apiKey $TAURI_APPLE_API_KEY_ID --apiIssuer $TAURI_APPLE_API_ISSUER",
    "publish:mac": "xcrun altool --upload-app --type macos --file \"out/*.pkg\" --apiKey $TAURI_APPLE_API_KEY_ID --apiIssuer $TAURI_APPLE_API_ISSUER",
    "sign:android": ".infra/scripts/android-signing.sh",
    "start": "next dev --turbopack",
    "start:android": "bun tauri android dev",
    "start:desktop": "bun tauri dev",
    "start:ios": "bun tauri ios dev",
    "start:web": "bun build/standalone/server.js"
  },
  "dependencies": {
    "@tauri-apps/api": "2.2.0",
    "@tauri-apps/plugin-updater": "2.3.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.469.0",
    "next": "15.1.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "5.4.0",
    "tailwind-merge": "2.6.0",
    "tailwindcss-animate": "1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@tauri-apps/cli": "2.2.2",
    "@types/node": "22.10.5",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "eslint": "9.17.0",
    "eslint-config-next": "15.1.3",
    "postcss": "8.4.49",
    "tailwindcss": "3.4.17",
    "tauri-version": "1.0.0-beta.2",
    "typescript": "5.7.2"
  }
}
